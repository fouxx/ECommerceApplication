<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginBottom="5dp">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/delete_from_cart"
        android:src="@drawable/ic_delete_black_48dp"
        android:layout_alignTop="@+id/cart_item_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="New Text"
        android:id="@+id/cart_item_name"
        android:textSize="@dimen/abc_text_size_large_material"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/delete_from_cart"
        android:layout_toEndOf="@+id/delete_from_cart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/cart_item_price"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/cart_item_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/cart_item_quantity"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/cart_item_name"
        android:layout_toRightOf="@+id/delete_from_cart"
        android:layout_toEndOf="@+id/delete_from_cart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/collective_item_price"
        android:layout_below="@+id/cart_item_price"
        android:layout_alignRight="@+id/cart_item_price"
        android:layout_alignEnd="@+id/cart_item_price" />

</RelativeLayout>